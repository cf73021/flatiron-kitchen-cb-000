<%= form_for recipe do |f|%>
<p>
  <%= f.label :name %>
  <%= f.text_field :name %>
</p>
<p>
  <%= f.collection_check_boxes :ingredient_ids, ingredients, :id, :name %>
</p>
<p>
  <%= f.fields_for :ingredients, recipe.ingredients.build do |r| %>
    <%= r.text_field :name %>
  <% end %>
  <%= f.submit %>
<% end %>
